<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_nav"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.vivekishere.quizadmin.SplashScreen"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_category"
            app:destination="@id/category"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/category"
        android:name="com.vivekishere.quizadmin.Category"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_category_to_questionsFragment"
            app:destination="@id/questionsFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_category_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/questionsFragment"
        android:name="com.vivekishere.quizadmin.questionsFragment"
        android:label="fragment_questions"
        tools:layout="@layout/fragment_questions" >

    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.vivekishere.quizadmin.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" />
</navigation>